<% flash.each do |name, msg| %>
  <% if msg.is_a?(String) %>
    <br/>
    <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
      <%= msg %>
      <button aria-label="Close" class="btn-close" data-bs-dismiss="alert" type="button"></button>
    </div>
  <% end %>
<% end %>