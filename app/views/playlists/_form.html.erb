<%= simple_form_for playlist do |f| %>
  <% if playlist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(playlist.errors.count, "error") %> prohibited this playlist from being saved:</h2>

      <ul>
        <% playlist.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class = "row g2 justify-content-center align-items-end">
    <div class="col-4">
      <%= f.input :name,input_html: {class: "form-control"},
      label_html: {class: "form-label"} %>
    </div>
    <div class="col-4 form-check form-switch mt-4">
      <%= f.input :public, label:"Publica", input_html:{class:"form-check-input"},label_html:{class:"form-check-label"}%>
    </div>
    <div class="col-8">
      <%= f.input :description, label:"Descripcion",input_html: {class:"form-control"}, label_html: {class:"form-label"}%>
    </div>
  </div>
  <div class="d-flex justify-content-center mt-4">
    <h3>Canciones</h3>
  </div>
  <div id="songs">

      <%= f.simple_fields_for :song_playlists do |song| %>
        
          <%= render 'song_playlist_fields', f: song %>

      <% end %>
    </div>
    <div class="d-flex justify-content-center mt-4 mb-4">
    <%= link_to_add_association 'Agregar Cancion', f, :song_playlists,class:"btn btn-success" %>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <%= f.button :submit,"Crear", class: "btn btn-dark" %>
  </div>
<% end %>